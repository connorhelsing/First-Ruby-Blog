<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @article do |f| %>
    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-8">
            <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofoucs: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="control-label col-sm-2">

            <%= f.label :description %>
      </div>
      <div class="col-sm-8">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article", autofoucs: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
        <% end %>
        <div align="center">
        [<%= link_to "Cancel and return to articles", articles_path %>]
    </div>
  </div>
</div>

