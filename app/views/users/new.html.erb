<h1 align="center">Join Brother's Blog</h1>

<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @user do |f| %>
    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :username %>
      </div>
      <div class="col-sm-8">
            <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofoucs: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="control-label col-sm-2">
            <%= f.label :email %>
      </div>
      <div class="col-sm-8">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofoucs: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="control-label col-sm-2">
            <%= f.label :password %>
      </div>
      <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofoucs: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
        <% end %>
        <div align="center">
        [<%= link_to "Cancel and return to articles", articles_path %>]
    </div>
  </div>
</div>
