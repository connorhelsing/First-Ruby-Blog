<h1 align="center">Create a new category</h1>

<%= render 'shared/errors', obj: @category %>

<%= form_for @category do |f| %>
<div class="form-group row">
  <div class="control-label col-sm-2">
    <%= f.label :name %>
  </div>
  <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofoucs: true %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-10 offset-sm-2">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  </div>
</div>
    <% end %>
    <div align="center">
    [<%= link_to "Cancel and return to articles", articles_path %>]
</div>
